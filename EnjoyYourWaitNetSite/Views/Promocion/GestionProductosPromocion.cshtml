@model EnjoyYourWaitNetSite.Models.PromocionProductoViewModel
@{
    ViewBag.Title = "Gestión de Productos de Promoción";
}
    <div>
        @if (ViewBag.SuccessState != null)
        {
            <div id="messageModal" class="modal">
                <div class="modal-dialog">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                @switch (ViewBag.SuccessState)
                                {
                                    case "LOAD_NOPRODUCTS":
                                        <p>No hay productos cargados en la promoción aún.</p>
                                        break;
                                    case "LOAD_FAILED":
                                        <p>Error al cargar los productos de la promoción.</p>
                                        break;
                                    case "ADD_SUCCESS":
                                        <p>El producto se agregó correctamente a la promoción.</p>
                                        break;
                                    case "ADD_FAILED":
                                        <p>Error al agregar el producto.</p>
                                        break;
                                    case "DISABLE_SUCCESS":
                                        <p>El producto se deshabilitó correctamente.</p>
                                        break;
                                    case "DISABLE_FAILED":
                                        <p>Error al deshabilitar el producto.</p>
                                        break;
                                    case "ENABLE_SUCCESS":
                                        <p>El producto se habilitó correctamente.</p>
                                        break;
                                    case "ENABLE_FAILED":
                                        <p>Error al habilitar el producto.</p>
                                        break;
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-sm btn-success" data-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div id="noProductsModal" class="modal" hidden="hidden">
            <div class="modal-dialog">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Error</h5>
                        </div>
                        <div class="modal-body">
                            <p>No se han seleccionado productos</p>
                        </div>
                        <div class="modal-footer">
                               <button type="button" class="btn btn-sm btn-secondary btn-cancelar" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (Model != null)
        {

