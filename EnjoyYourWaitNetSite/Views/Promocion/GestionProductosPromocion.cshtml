            <div class="row mt-3">
                <div class="col justify-content-center">
                    @if (ViewBag.SuccessState == "LOAD_NOPRODUCTS")
                    {
                        <div class="row mt-3">
                            <div class="col-md-12 col-recep">
                                <font class="float-left" size="5">Productos</font>
                                <button type="button" id="btnRegistrarProducto" class="btn btn-sm float-right">Asociar productos</button>
                            </div>
                        </div>
                    }
                    <div class="row mt-3">
                        <div class="col-md-12 col-recep">
                            <div id="divTablaProductos" class="table-responsive">
                                <table class="table table-prod">
                                    <thead>
                                        <tr>
                                            <th scope="col" class="table-recepcion">Nombre</th>
                                            <th scope="col" class="table-recepcion">Precio</th>
                                            @if (ViewBag.SuccessState == "LOAD_NOPRODUCTS")
                                            {
                                                <th scope="col" class="tabla-recepcion">Agregar</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var producto in Model.lstProducto)
                                        {
                                            <tr>
                                                <td class="align-middle">@producto.nombre</td>
                                                <td class="align-middle">$@producto.precio</td>
                                                @if (ViewBag.SuccessState == "LOAD_NOPRODUCTS")
                                                {
                                                    <td class="align-middle"><input type="checkbox" id="@producto.idProducto"></td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>

@section scripts
{
    @if (ViewBag.SuccessState != null)
    {
        <script>
            $(function () {
                $('#messageModal').modal('show');
            });
        </script>
    }
    @if (Model != null)
    {
<script>
            $(function () {
                $("#btnRegistrarProducto").click(function () {
                    var ids = [];
                    $("input[type='checkbox']").each(function () {
                        var $this = $(this);
                        console.log($this)
                        if ($this.is(":checked")) {
                            console.log(this.id)
                            ids.push(this.id);
                        }

                    });
                    if (ids.length > 0) {
                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("AsociarProductosPromocion", "Promocion")',
                            data: ({ idProductos: ids, idPromocion: @Model.IdPromocion })
                        }).done(function (r) {
                            window.location.href = '@Url.Action("GestionPromocion","Promocion")';
                        });
                    }
                    else {
                        $('#noProductsModal').modal('show');
                    }
                });
            });
</script>
    }
}

           