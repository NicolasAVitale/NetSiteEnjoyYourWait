@model EnjoyYourWaitNetSite.Models.PromocionesViewModel
@{
    ViewBag.Title = "Gestión de Promociones";
}
<div>
    @if (ViewBag.SuccessState != null)
    {
        <div id="messageModal" class="modal">
            <div class="modal-dialog">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            @switch (ViewBag.SuccessState)
                            {
                                case "LOAD_NOPROMO":
                                    <p>No hay promociones cargados en el sistema aún.</p>
                                    break;
                                case "LOAD_FAILED":
                                    <p>Error al cargar las promociones.</p>
                                    break;
                                case "ADD_SUCCESS":
                                    <p>La promoción se agregó correctamente.</p>
                                    break;
                                case "ADD_FAILED":
                                    <p>Error al agregar la promoción.</p>
                                    break;
                                case "DISABLE_SUCCESS":
                                    <p>La promoción se deshabilitó correctamente.</p>
                                    break;
                                case "DISABLE_FAILED":
                                    <p>Error al deshabilitar la promocion.</p>
                                    break;
                                case "ENABLE_SUCCESS":
                                    <p>La promoción se habilitó correctamente.</p>
                                    break;
                                case "ENABLE_FAILED":
                                    <p>Error al habilitar la promoción.</p>
                                    break;
                                case "UPDATE_SUCCESS":
                                    <p>La promoción se modificó correctamente.</p>
                                    break;
                                case "UPDATE_FAILED":
                                    <p>Error al modificar la promoción.</p>
                                    break;
                            }
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-sm btn-success" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (Model != null)
    {
        <div id="disableModal" class="modal">
            <div class="modal-dialog">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Deshabilitar</h5>
                        </div>
                        <div class="modal-body">
                            <p>¿Desea deshabilitar la promoción seleccionada?</p>
                        </div>
                        <div class="modal-footer">
                            @using (Html.BeginForm("DeshabilitarPromocion", "Promocion", FormMethod.Post))
                            {
                                <input id="inDisable" name="idPromocion" type="hidden">
                                <button type="button" class="btn btn-sm btn-secondary btn-cancelar" data-dismiss="modal">Cancelar</button>
                                <input type="submit" class="btn btn-sm btn-danger" value="Deshabilitar">
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="enableModal" class="modal">
            <div class="modal-dialog">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Habilitar</h5>
                        </div>
                        <div class="modal-body">
                            <p>¿Desea habilitar la promoción seleccionado?</p>
                        </div>
                        <div class="modal-footer">
                            @using (Html.BeginForm("HabilitarPromocion", "Promocion", FormMethod.Post))
                            {
                                <input id="inEnable" name="idPromocion" type="hidden">
                                <button type="button" class="btn btn-sm btn-secondary btn-cancelar" data-dismiss="modal">Cancelar</button>
                                <input type="submit" class="btn btn-sm btn-success" value="Habilitar">
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col justify-content-center">
                <div class="row mt-3">
                    <div class="col-md-12 col-recep">
                        <font class="float-left" size="5">Promociones</font>
                        <button type="button" id="btnRegistrarPromocion" class="btn btn-sm float-right" onclick="location.href='@Url.Action("AbrirRegistroPromocion", "Promocion")'">Crear nuevo</button>
                        <button type="button" id="btnVerPromociones" class="btn btn-sm float-right" onclick="location.href='@Url.Action("Promociones", "Promocion")'">Ver Promociones</button>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 col-recep">
                        <div id="divTablaProductos" class="table-responsive">
                            <table class="table table-prod">
                                <thead>
                                    <tr>
                                        <th scope="col" class="table-recepcion">Descripción</th>
                                        <th scope="col" class="table-recepcion">Vencimiento</th>
                                        <th scope="col" class="table-recepcion">Tipo</th>
                                        <th scope="col" class="table-recepcion"><span class="txt-acceso-sist">Estado</span><span class="txt-acceso">Estado</span></th>
                                        <th scope="col" class="table-recepcion"></th>
                                        <th scope="col" class="table-recepcion txt-btn-visibilidad"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var promocion in Model.lstPromociones)
                                    {
                                    <tr>
                                        <td class="align-middle">@promocion.descripcion</td>
                                        <td class="align-middle">@promocion.fechaBaja</td>
                                        @if (promocion.esPremio == 1)
                                        {
                                            <td class="align-middle">Premio</td>
                                        }
                                        else
                                        {
                                            <td class="align-middle">Promoción</td>
                                        }

                                        @if (promocion.activo == 1)
                                        {
                                            <td class="align-middle table-recepcion estado-size">
                                                <span class="txt-btn-visibilidad">Habilitado</span>
                                                <button type="button" class="btn btn-sm item-disable-selection btn-grill-style img-visibilidad">
                                                    <img src="~/Content/img/icon-enable.png" class="img-visibilidad img-dis-ena" />
                                                </button>
                                            </td>
                                        }
                                        else
                                        {

                                            <td class="align-middle table-recepcion estado-size">
                                                <span class="txt-btn-visibilidad">Deshabilitado</span>
                                                <button type="button" class="btn btn-sm item-enable-selection btn-grill-style img-visibilidad">
                                                    <img src="~/Content/img/icon-disable.png" class="img-visibilidad img-dis-ena" />
                                                </button>
                                            </td>
                                        }

                                        <td>
                                            <button type="button" class="btn btn-sm item-update-selection btn-grill-style"
                                                    onclick="location.href='@Url.Action("AbrirModificarPromocion", "Promocion", promocion)'">
                                                <i class="fas fa-check-square check-visible"></i>
                                                <span class="txt-modif-visible">Modificar</span>
                                            </button>
                                        </td>

                                        <td>
                                            <button type="button" class="btn btn-sm item-update-selection btn-grill-style"
                                                    onclick="location.href='@Url.Action("VerDetallePromocion", "Promocion", promocion)'">
                                                <i class="fas fa-check-square check-visible"></i>
                                                <span class="txt-modif-visible">Ver productos</span>
                                            </button>
                                        </td>



                                        @if (promocion.activo == 1)
                                        {
                                            <td class="table-recepcion txt-btn-visibilidad">
                                                <button type="button" class="btn btn-sm item-disable-selection btn-grill-style"
                                                        item-id="@promocion.idPromocion">
                                                    Deshabilitar
                                                </button>
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="table-recepcion txt-btn-visibilidad">
                                                <button type="button" class="btn btn-sm item-enable-selection btn-grill-style"
                                                        item-id="@promocion.idPromocion">
                                                    Habilitar
                                                </button>
                                            </td>
                                        }
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section scripts
{
    @if (ViewBag.SuccessState != null)
    {
        <script>
            $(function () {
                $('#messageModal').modal('show');
            });
        </script>
    }
    @if (Model != null)
    {
        <script>
            $(function () {
                $(".item-disable-selection").click(function () {
                    var $itemClicked = $(this);
                    var id = $itemClicked.attr('item-id');
                    $("#inDisable").val(id);
                    $("#disableModal").modal("show");
                });
            });
            $(function () {
                $(".item-enable-selection").click(function () {
                    var $itemClicked = $(this);
                    var id = $itemClicked.attr('item-id');
                    $("#inEnable").val(id);
                    $("#enableModal").modal("show");
                });
            });
        </script>
    }
}