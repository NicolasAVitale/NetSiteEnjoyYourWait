@model EnjoyYourWaitNetSite.Models.RecepcionistaViewModel
@{
    ViewBag.Title = "Gestión de Recepcionistas";
}
<div>
    @if (ViewBag.SuccessState != null)
    {
        <div id="messageModal" class="modal">
            <div class="modal-dialog">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-body">
                            @switch (ViewBag.SuccessState)
                            {
                                case "LOAD_FAILED":
                                    <p>Error al cargar los recepcionistas.</p>
                                    break;
                                case "ADD_SUCCESS":
                                    <p>El/La recepcionista se registró correctamente.</p>
                                    break;
                                case "ADD_FAILED":
                                    <p>Error al registrar el/la recepcionista.</p>
                                    break;
                                case "DELETE_SUCCESS":
                                    <p>El/La recepcionista se elimino correctamente.</p>
                                    break;
                                case "DELETE_FAILED":
                                    <p>Error al eliminar el/la recepcionista.</p>
                                    break;
                            }
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-sm btn-success" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (Model != null)
    {
        <div id="addModal" class="modal">
            <div class="modal-dialog">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div id="addModalContent"></div>
                    </div>
                </div>
            </div>
        </div>

        <div id="deleteModal" class="modal">
            <div class="modal-dialog">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Eliminar</h5>
                        </div>
                        <div class="modal-body">
                            <p>¿Desea eliminar el/la recepcionista seleccionado/a?</p>
                        </div>
                        <div class="modal-footer">
                            @using (Html.BeginForm("EliminarRecepcionista", "Recepcionista", FormMethod.Post))
                            {
                                <input id="inRecepcionista" name="dni" type="hidden">
                                <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Cancelar</button>
                                <input type="submit" class="btn btn-sm btn-danger" value="Eliminar">
                            }
                            </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col justify-content-center">
                <div class="row mt-3">
                    <div class="col">
                        <font class="float-left" size="5">Recepionistas</font>
                        <button type="button" id="btnRegistrarRecepcionista" class="btn btn-success btn-sm float-right" onclick="location.href='@Url.Action("AbrirRegistroRecepcionista", "Recepcionista")'">Registrar</button>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">DNI</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Apellido</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Fecha de Nacimiento</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var recepcionista in Model.lstRecepcionista)
                                    {
                                        <tr>
                                            <td class="align-middle">@recepcionista.Dni</td>
                                            <td class="align-middle">@recepcionista.Nombre</td>
                                            <td class="align-middle">@recepcionista.Apellido</td>
                                            <td class="align-middle">@recepcionista.Email</td>
                                            <td class="align-middle">@recepcionista.FechaNacimiento</td>
                                            <td>
                                                <button type="button" class="btn btn-danger btn-sm item-delete-selection"
                                                        item-id="@recepcionista.Dni">
                                                    Borrar
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section scripts
{
    @if (ViewBag.SuccessState != null)
    {
        <script>
            $(function () {
                $('#messageModal').modal('show');
            });
        </script>
    }
    @if (Model != null)
    {
        <script>
            $(function () {
                $(".item-delete-selection").click(function () {
                    var $itemClicked = $(this);
                    var id = $itemClicked.attr('item-id');
                    $("#inRecepcionista").val(id);
                    $("#deleteModal").modal("show");
                });
            });
        </script>
    }
}  