@model EnjoyYourWaitNetSite.Models.RecepcionistaViewModel
@{
    ViewBag.Title = "Gestión de Recepcionistas";
}
    <div>
        @if (ViewBag.SuccessState != null)
        {
            <div id="messageModal" class="modal">
                <div class="modal-dialog">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                @switch (ViewBag.SuccessState)
                                {
                                    case "LOAD_FAILED":
                                        <p>Error al cargar los recepcionistas.</p>
                                        break;
                                    case "ADD_SUCCESS":
                                        <p>El/La recepcionista se registró correctamente.</p>
                                        break;
                                    case "ADD_FAILED":
                                        <p>Error al registrar el/la recepcionista.</p>
                                        break;
                                    case "DISABLE_SUCCESS":
                                        <p>El acceso al sistema se deshabilitó correctamente.</p>
                                        break;
                                    case "DISABLE_FAILED":
                                        <p>Error al deshabilitar el acceso al sistema.</p>
                                        break;
                                    case "ENABLE_SUCCESS":
                                        <p>El acceso al sistema se habilitó correctamente.</p>
                                        break;
                                    case "ENABLE_FAILED":
                                        <p>Error al habilitar el acceso al sistema.</p>
                                        break;
                                    case "UPDATE_SUCCESS":
                                        <p>El/La recepcionista se modificó correctamente.</p>
                                        break;
                                    case "UPDATE_FAILED":
                                        <p>Error al modificar el/la recepcionista.</p>
                                        break;
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-sm btn-success" data-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model != null)
        {
            <div id="updateModal" class="modal">
                <div class="modal-dialog">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Modificar</h5>
                            </div>
                            <div class="modal-body">
                                <p>¿Desea modificar el/la recepcionista seleccionado/a?</p>
                            </div>
                            <div class="modal-footer">
                                @using (Html.BeginForm("ModificarRecepcionista", "Recepcionista", FormMethod.Post))
                                {
                                    <input id="inRecepcionistaId" name="dni" type="hidden">
                                    <input id="inRecepcionistaVal" name="email" type="hidden">
                                    <button type="button" class="btn btn-sm btn-secondary btn-cancelar" data-dismiss="modal">Cancelar</button>
                                    <input type="submit" class="btn btn-sm btn-success" value="Modificar">
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="disableModal" class="modal">
                <div class="modal-dialog">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Deshabilitar</h5>
                            </div>
                            <div class="modal-body">
                                <p>¿Desea deshabilitar el/la recepcionista seleccionado/a? De esta forma se eliminará el acceso al sistema.</p>
                            </div>
                            <div class="modal-footer">
                                @using (Html.BeginForm("DisableRecepcionista", "Recepcionista", FormMethod.Post))
                                {
                                    <input id="inRecepcionista" name="dni" type="hidden">
                                    <button type="button" class="btn btn-sm btn-secondary btn-cancelar" data-dismiss="modal">Cancelar</button>
                                    <input type="submit" class="btn btn-sm btn-danger" value="Deshabilitar">
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="enableModal" class="modal">
                <div class="modal-dialog">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Habilitar</h5>
                            </div>
                            <div class="modal-body">
                                <p>¿Desea habilitar el/la recepcionista seleccionado/a?</p>
                            </div>
                            <div class="modal-footer">
                                @using (Html.BeginForm("EnableRecepcionista", "Recepcionista", FormMethod.Post))
                                {
                                    <input id="inRecepcionista" name="dni" type="hidden">
                                    <button type="button" class="btn btn-sm btn-secondary btn-cancelar" data-dismiss="modal">Cancelar</button>
                                    <input type="submit" class="btn btn-sm btn-success" value="Habilitar">
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col justify-content-center">
                    <div class="row mt-3">
                        <div class="col-md-12 col-recep">
                            <font class="float-left" size="5">Recepionistas</font>
                            <button type="button" id="btnRegistrarRecepcionista" class="btn btn-sm float-right" onclick="location.href='@Url.Action("AbrirRegistroRecepcionista", "Recepcionista")'">Crear nuevo</button>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12 col-recep">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col" class="table-recepcion">DNI</th>
                                            <th scope="col" class="table-recepcion">Nombre</th>
                                            <th scope="col" class="table-recepcion">Apellido</th>
                                            <th scope="col" class="table-recepcion">Email</th>
                                            <th scope="col" class="table-recepcion"></th>
                                            <th scope="col" class="table-recepcion"><span class="txt-acceso-sist">Acceso sistema</span><span class="txt-acceso">Acceso</span></th>
                                            <th scope="col" class="table-recepcion txt-btn-visibilidad"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var recepcionista in Model.lstRecepcionista)
                                        {
                                        <tr>
                                            <td class="align-middle table-recepcion">@recepcionista.Dni</td>
                                            <td class="align-middle table-recepcion">@recepcionista.Nombre</td>
                                            <td class="align-middle table-recepcion">@recepcionista.Apellido</td>
                                            <td class="align-middle table-recepcion mail-size">
                                                <input type="text" id="emailInput" name="email" value="@recepcionista.Email">
                                            </td>
                                            <td class="table-recepcion">
                                                <button type="button" class="btn btn-sm item-update-selection btn-grill-style"
                                                        item-id="@recepcionista.Dni">
                                                    <i class="fas fa-check-square check-visible"></i>
                                                    <span class="txt-modif-visible">Modificar</span>
                                                </button>
                                            </td>
                                            @if (recepcionista.Activo)
                                            {
                                        <td class="align-middle table-recepcion estado-size">
                                            <span class="txt-btn-visibilidad">Habilitado</span>
                                            <button type="button" class="btn btn-sm item-disable-selection btn-grill-style img-visibilidad"
                                                    item-id="@recepcionista.Dni">                                                
                                                <img src="~/Content/img/icon-enable.png" class="img-visibilidad img-dis-ena" />
                                            </button>
                                        </td>
                                            }
                                            else
                                            {
                                        <td class="align-middle table-recepcion estado-size">
                                            <span class="txt-btn-visibilidad">Deshabilitado</span>
                                            <button type="button" class="btn btn-sm item-enable-selection btn-grill-style img-visibilidad"
                                                    item-id="@recepcionista.Dni">                                                
                                                <img src="~/Content/img/icon-disable.png" class="img-visibilidad img-dis-ena" />
                                            </button>
                                        </td>
                                            }

                                            @if (recepcionista.Activo)
                                            {
                                                <td class="table-recepcion txt-btn-visibilidad">
                                                    <button type="button" class="btn btn-sm item-disable-selection btn-grill-style"
                                                            item-id="@recepcionista.Dni">
                                                        <span class="">Deshabilitar</span>                                                        
                                                    </button>
                                                </td>
                                            }
                                            else
                                            {
                                                <td class="table-recepcion txt-btn-visibilidad">
                                                    <button type="button" class="btn btn-sm item-enable-selection btn-grill-style"
                                                            item-id="@recepcionista.Dni">
                                                        <span class="">Habilitar</span>                                                        
                                                    </button>
                                                </td>
                                            }
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

@section scripts
{
    @if (ViewBag.SuccessState != null)
    {
        <script>
            $(function () {
                $('#messageModal').modal('show');
            });
        </script>
    }
    @if (Model != null)
    {
        <script>
            $(function () {
                $(".item-disable-selection").click(function () {
                    var $itemClicked = $(this);
                    var id = $itemClicked.attr('item-id');
                    $("#inRecepcionista").val(id);
                    $("#disableModal").modal("show");
                });
            });
            $(function () {
                $(".item-enable-selection").click(function () {
                    var $itemClicked = $(this);
                    var id = $itemClicked.attr('item-id');
                    $("#inRecepcionista").val(id);
                    $("#enableModal").modal("show");
                });
            });
            $(function () {
                $(".item-update-selection").click(function () {
                    var $itemClicked = $(this);
                    var id = $itemClicked.attr('item-id');
                    var val = document.getElementById("emailInput").value
                    $("#inRecepcionistaId").val(id);
                    $("#inRecepcionistaVal").val(val);
                    $("#updateModal").modal("show");
                });
            });
        </script>
    }
}  