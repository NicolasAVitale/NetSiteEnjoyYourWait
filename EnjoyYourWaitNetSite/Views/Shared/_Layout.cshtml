<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no">
    <title>@ViewBag.Title - On The Grill</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/img/pinches co.ico">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/fontawesome-free/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <link href="~/Content/css/animate.css" rel="stylesheet">   
    <link href="~/Content/css/resto.styles.min.css" rel="stylesheet">
</head>
<body class="fondo-madera">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                    <div id="barra-cliente">
                        <img src="~/Content/img/pinches red.svg" alt="logo-grill" class="logo-grill-1" />
                        <div id="nom-resto"><h1 class="titulo">On the <span id="grill">grill</span></h1></div>
                    </div>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Menú", "Menu", "Producto")</li>
                    <li>@Html.ActionLink("Promociones", "Promociones", "Promocion")</li>
                    @if (EnjoyYourWaitNetSite.Helper.SessionHelper.Administrador != null && EnjoyYourWaitNetSite.Helper.SessionHelper.Recepcionista == null && EnjoyYourWaitNetSite.Helper.SessionHelper.Cliente == null)
                    {
                        <li>@Html.ActionLink("Gestión Recepcionistas", "GestionRecepcionista", "Recepcionista")</li>
                        <li>@Html.ActionLink("Gestión Productos", "GestionProducto", "Producto")</li>
                        <li>@Html.ActionLink("Gestión Promociones", "GestionPromocion", "Promocion")</li>
                        <li>@Html.ActionLink("Gestión Premios", "GestionPremio", "Premio")</li>
                        <li>@Html.ActionLink("Gestión Encuestas", "GestionEncuesta", "Encuesta")</li>
                        <li>@Html.ActionLink("Reportes", "Reportes", "Reporte")</li>
                    }
                    @if (EnjoyYourWaitNetSite.Helper.SessionHelper.Cliente != null && EnjoyYourWaitNetSite.Helper.SessionHelper.Recepcionista == null && EnjoyYourWaitNetSite.Helper.SessionHelper.Administrador == null)
                    {
                        <li>@Html.ActionLink("Juegos", "Juegos", "Juego")</li>
                        <li>@Html.ActionLink("Mis Premios", "MisPremios", "Premio")</li>
                    }
                    @if (EnjoyYourWaitNetSite.Helper.SessionHelper.Administrador == null && EnjoyYourWaitNetSite.Helper.SessionHelper.Recepcionista == null && EnjoyYourWaitNetSite.Helper.SessionHelper.Cliente == null)
                    {
                        <li><a data-toggle="modal" data-target="#mailConfirmationModal">Ingresar a Fila</a></li>
                    }
                    @if (EnjoyYourWaitNetSite.Helper.SessionHelper.Administrador == null && EnjoyYourWaitNetSite.Helper.SessionHelper.Recepcionista != null && EnjoyYourWaitNetSite.Helper.SessionHelper.Cliente == null)
                    {
                        <li>@Html.ActionLink("Ingresar Cliente a Fila", "IngresarClienteAFila", "Fila")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div id="mailConfirmationModal" class="modal">
        <div class="modal-dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Ingresar a Fila</h5>
                    </div>
                    @using (Html.BeginForm("EnviarCorreoConfirmacion", "Fila", FormMethod.Post))
                    {
                        <div class="modal-body">
                            <p>Ingresar el correo para recibir confirmación a la fila</p>
                            <input type="text" id="email" name="email">
                        </div>
                        <div class="modal-footer">


                            <button type="button" class="btn btn-sm btn-secondary btn-cancelar" data-dismiss="modal">Cancelar</button>
                            <input type="submit" class="btn btn-sm item-send-selection btn-success" value="Enviar">

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <footer>
            <div id="social-icons">
                <ul class="list-inline">
                    <li>
                        <a href="https://www.facebook.com"><i class="fab fa-facebook fa-fw fa-3x"></i></a>
                    </li>
                    <li>
                        <a href="https://twitter.com"><i class="fab fa-twitter fa-fw fa-3x"></i></a>
                    </li>
                    <li>
                        <a href="https://www.instagram.com"><i class="fab fa-instagram fa-fw fa-3x"></i></a>
                    </li>
                </ul>
            </div>

            <div id="tablaTiempoPersona">
                <label>Tiempo mínimo de espera estimado</label>
                <p id="tiempoEspera"></p>
                <label>Cantidad de personas adelante</label>
                <p id="personasAdelante"></p>
            </div>

            <p id="power-by">&copy; @DateTime.Now.Year - Powered by Enjoy Your Wait</p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            CalcularTiempoEspera();
        });

        var waitTime = setInterval(CalcularTiempoEspera, 500000);

        function CalcularTiempoEspera() {
            $.ajax({
                type: "POST",
                url: "/Fila/CalcularTiempoYPersonasEspera",
                data: {},
                dataType: "json",
                success: function (data) {
                    document.getElementById("tiempoEspera").innerHTML = data[0];
                    document.getElementById("personasAdelante").innerHTML = data[1];
                },
                error: function (errorThrown) {
                    alert(errorThrown);
                }
            });
        }
    </script>    
</body>
</html>
